  }
  .app-link {
    display: flex;
    align-items: center;
    gap: 16px;
  }
  .app-box .app-box__info {
    text-align: center;
  }
  @media (min-width: 768px) {
    .app-box {
      flex-direction: row;
      justify-content: space-between;
      padding: 20px 24px;
      gap: 64px;
      margin-top: 84px;
    }
  }
  .app-box {
    display: flex;
    flex-direction: column;
    align-items: center;
